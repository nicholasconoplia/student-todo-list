{
  "name": "to-do",
  "productName": "To-Do",
  "version": "3.3.0",
  "description": "Student Todo List with Canvas Integration - An open-source app for students to manage assignments and todos",
  "author": {
    "name": "Nicholas Conoplia",
    "url": "https://github.com/nicholasconoplia"
  },
  "homepage": "https://github.com/nicholasconoplia/student-todo-list",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicholasconoplia/student-todo-list.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac-win": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "conf": "^10.2.0",
    "dotenv": "^16.0.3",
    "electron-store": "^8.2.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^24.0.0",
    "electron-devtools-installer": "^4.0.0"
  },
  "build": {
    "appId": "com.nickconoplia.todo",
    "productName": "To-Do",
    "copyright": "Copyright Â© 2024",
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "files": [
      "**/*",
      "!{dist,dist/**/*}",
      "!{release,release/**/*}",
      "!**/*.{md,markdown}",
      "!**/*.d.ts",
      "!**/*.{iml,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,suo,xproj}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*",
      "styles.css"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
